@model Library.Models.UsuarioModel

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Aluno</h1>

<div>
    <h4>@Html.DisplayFor(modelItem => Model.Aluno )</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aluno)
        </dd>
        <dt class = "col-sm-2">
            É admin?
        </dt>
        <dd class = "col-sm-10">
            @if (Model.IsAdmin) {
                <i class="fas fa-check"></i>
            }
            else{
                <i class="fas fa-times"></i>
            }
        </dd>
    </dl>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Livros)
    </dt>
    <dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>Título</th>
                <th>Autor</th>
            </tr>
            @foreach (var item in Model.Livros)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Autor.AuthorName)
                    </td>
                </tr>
            }
        </table>
    </dd>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.UsrID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
