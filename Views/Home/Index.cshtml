@model IEnumerable<Library.Models.UsuarioModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem vindo!</h1>
    <p>Descubra um mundo de conhecimento <a href="https://docs.microsoft.com/aspnet/core">na biblioteca da Microsoft</a>.</p>
</div>
<hr />
<section class="vh-70">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://www.getillustrations.com/packs/zanzi-free-illustrations-for-websites/scenes/_1x/accounts%20_%20user,%20users,%20profile,%20account,%20man,%20people,%20website,%20browser,%20webpage_sm.png"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="form3Example3" class="form-control form-control-md"
                               placeholder="Digite um e-mail válido" />
                    </div>
                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input type="password" id="form3Example4" class="form-control form-control-md"
                               placeholder="Digite sua senha" />
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                            <label class="form-check-label" for="form2Example3">
                                Lembre-me
                            </label>
                        </div>
                        <a href="#!" class="text-body">Esqueceu a senha?</a>
                    </div>
                    <div class="text-center text-md-start mt-4 pt-2">
                        <button type="button" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Entrar
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Não possui um acesso? <a href="#!"
                                                      class="link-danger">Registre-se</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
